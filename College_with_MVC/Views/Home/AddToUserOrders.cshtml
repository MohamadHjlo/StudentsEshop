@model Order
@*خیلی باحاله الان دقیقا تو هرجا اسم مدل بیاری انگار فاکتور رو اوری و میتونی زیر مجموعه هاشوو با دات فراخوانی بکنی*@
>
<link href="~/css/Font.css" rel="stylesheet" />

@{
    ViewData["Title"] = "سبد خرید";
}
<div style="font-family: 'vazir' "></div>

@if (Model != null)
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>کالا</th>
                <th>تعداد</th>
                <th>قیمت</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Count</td>
                    <td>@(item.Count * item.Price)</td>
                    <td>
                        <label>        @Html.ActionLink("افزودن فاکتور های من", "Orders", "Admin", "", new { @class = "" })</label>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h5> جمع کل : @Model.OrderDetails.Sum(s => s.Count * s.Price)  </h5>
    <p>
        <a class="myButton" asp-action="payment"> پرداخت  </a>
    </p>

}
else
{
    <div class="alert alert-danger">فاکتوری وجود ندارد</div>
}